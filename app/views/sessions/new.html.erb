<div class="container">
  <%= form_for :user, url: sessions_path, :html => { :method => 'POST' } do |f| %>
    <%= f.label "Email" %><br>
    <%= f.text_field :email %><br>
    <%= f.label "Password" %><br>
    <%= f.password_field :password %><br>
    <%= f.submit "Login" %>
  <% end %>

  <% if @error %>
  <p class="error"><strong><%= @error %></strong></p>
  <% end %>
</div>